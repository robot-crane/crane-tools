{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./out",
    "module": "ESNext",
    "target": "es5",
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declarationMap": true, // enables importers to jump to source
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}